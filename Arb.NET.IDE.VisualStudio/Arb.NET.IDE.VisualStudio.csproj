<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <MinimumVisualStudioVersion>17.0</MinimumVisualStudioVersion>
    <VSToolsPath Condition="'$(VSToolsPath)' == ''">$(MSBuildExtensionsPath32)\Microsoft\VisualStudio\v$(VisualStudioVersion)</VSToolsPath>
  </PropertyGroup>
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectTypeGuids>{82b43b9b-a64c-4715-b499-d71e9ca2bd60};{FAE04EC0-301F-11D3-BF4B-00C04F79EFBC}</ProjectTypeGuids>
    <ProjectGuid>{13D23EB3-C222-4646-A0CD-CAD17570A7CE}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>Arb.NET.IDE.VisualStudio</RootNamespace>
    <AssemblyName>Arb.NET.IDE.VisualStudio</AssemblyName>
    <TargetFrameworkVersion>v4.7.2</TargetFrameworkVersion>
    <LangVersion>latest</LangVersion>

    <!-- Suppress assembly version conflict warnings for BCL polyfills (System.Memory etc.)
         that the VS SDK NuGet and the Arb.NET IDE build both supply. VS picks the right one at runtime. -->
    <MSBuildWarningsAsMessages>MSB3277</MSBuildWarningsAsMessages>
    <GeneratePkgDefFile>true</GeneratePkgDefFile>
    <UseCodebase>true</UseCodebase>
    <IncludeAssemblyInVSIXContainer>true</IncludeAssemblyInVSIXContainer>
    <IncludeDebugSymbolsInVSIXContainer>false</IncludeDebugSymbolsInVSIXContainer>
    <IncludeDebugSymbolsInLocalVSIXDeployment>false</IncludeDebugSymbolsInLocalVSIXDeployment>
    <CopyBuildOutputToOutputDirectory>true</CopyBuildOutputToOutputDirectory>
    <CopyOutputSymbolsToOutputDirectory>true</CopyOutputSymbolsToOutputDirectory>
    <StartAction>Program</StartAction>
    <StartProgram Condition="'$(DevEnvDir)' != ''">$(DevEnvDir)devenv.exe</StartProgram>
    <StartArguments>/rootsuffix Exp</StartArguments>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Properties\AssemblyInfo.cs" />
    <Compile Include="ArbPackage.cs" />
    <Compile Include="Tools\ArbToolWindow.cs" />
    <Compile Include="Tools\ShowArbToolWindowCommand.cs" />
    <Compile Include="Tools\ArbEditorControl.xaml.cs">
      <DependentUpon>ArbEditorControl.xaml</DependentUpon>
    </Compile>
    <Compile Include="Tools\ArbInputDialog.xaml.cs">
      <DependentUpon>ArbInputDialog.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Page Include="Tools\ArbEditorControl.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Tools\ArbInputDialog.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <None Include="source.extension.vsixmanifest">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System" />
      <Reference Include="System.Design" />
      <Reference Include="PresentationCore" />
      <Reference Include="PresentationFramework" />
      <Reference Include="WindowsBase" />
      <Reference Include="System.Xaml" />
    <!-- Arb.NET and its transitive deps, copied to bin/IDE by the Arb.NET IDE build target. -->
    <Reference Include="Arb.NET">
      <HintPath>..\Arb.NET\bin\IDE\netstandard2.0\Arb.NET.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="JsonSchema.Net">
      <HintPath>..\Arb.NET\bin\IDE\netstandard2.0\JsonSchema.Net.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="JsonPointer.Net">
      <HintPath>..\Arb.NET\bin\IDE\netstandard2.0\JsonPointer.Net.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Json.More">
      <HintPath>..\Arb.NET\bin\IDE\netstandard2.0\Json.More.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Humanizer">
      <HintPath>..\Arb.NET\bin\IDE\netstandard2.0\Humanizer.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="System.Text.Json">
      <HintPath>..\Arb.NET\bin\IDE\netstandard2.0\System.Text.Json.dll</HintPath>
      <Private>true</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.SDK" Version="17.0.32112.339" ExcludeAssets="runtime" NoWarn="NU1604" />
    <PackageReference Include="Microsoft.VSSDK.BuildTools" Version="17.14.2120" NoWarn="NU1604" />
  </ItemGroup>
  <!-- This thing is responsible for the Menu buttons in VS -->
  <ItemGroup>
    <VSCTCompile Include="ArbPackage.vsct">
      <ResourceName>Menus.ctmenu</ResourceName>
    </VSCTCompile>
  </ItemGroup>
  <!-- This is necessary as the DLLs are not part of the VSIX package otherwise and a runtime dependency resolution fails -->
  <ItemGroup>
    <Content Include="$(IntermediateOutputPath)ArbPackage.cto">
      <Link>ArbPackage.cto</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.Text.Json.dll">
      <Link>System.Text.Json.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.Collections.Immutable.dll">
      <Link>System.Collections.Immutable.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.Runtime.CompilerServices.Unsafe.dll">
      <Link>System.Runtime.CompilerServices.Unsafe.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.Memory.dll">
      <Link>System.Memory.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.Buffers.dll">
      <Link>System.Buffers.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.Threading.Tasks.Extensions.dll">
      <Link>System.Threading.Tasks.Extensions.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.Numerics.Vectors.dll">
      <Link>System.Numerics.Vectors.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\Microsoft.Bcl.AsyncInterfaces.dll">
      <Link>Microsoft.Bcl.AsyncInterfaces.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.IO.Pipelines.dll">
      <Link>System.IO.Pipelines.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
    <Content Include="..\Arb.NET\bin\IDE\netstandard2.0\System.ComponentModel.Annotations.dll">
      <Link>System.ComponentModel.Annotations.dll</Link>
      <IncludeInVSIX>true</IncludeInVSIX>
    </Content>
  </ItemGroup>

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <Import Project="$(VSToolsPath)\VSSDK\Microsoft.VsSDK.Common.targets" Condition="Exists('$(VSToolsPath)\VSSDK\Microsoft.VsSDK.Common.targets')" />
  <Import Project="$(VSToolsPath)\VSSDK\Microsoft.VsSDK.targets" Condition="'$(VSToolsPath)' != ''" />
